<mvc:View
    controllerName="register.controller.salesregister"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    height="100%"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <OverflowToolbar id="_IDGenOverflowToolbar">
                <ToolbarSpacer id="_IDGenToolbarSpacer" />
                <Button
                    id="refreshButton"
                    icon="sap-icon://refresh"
                    text="Refresh"
                    press="onRefresh"
                />
                <Button
                    id="filterButton"
                    icon="sap-icon://filter"
                    text="Filter"
                    press="onOpenFilterDialog"
                />
            </OverflowToolbar>

            <t:Table
                id="salesTable"
                rows="{/YY1_SALESREGISTER}"
                selectionMode="None"
                visibleRowCount="10"
                ariaLabelledBy="title"
            >
                <t:columns>
                    <t:Column
                        id="_IDGenColumn"
                        width="12rem"
                    >
                        <Label
                            id="_IDGenLabel"
                            text="Billing Document"
                        />
                        <t:template>
                            <Text
                                id="_IDGenText1"
                                text="{BillingDocument}"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="_IDGenColumn1"
                        width="10rem"
                    >
                        <Label
                            id="_IDGenLabel1"
                            text="Invoice Date"
                        />
                        <t:template>
                            <Text
                                id="_IDGenText2"
                                text="{
                                path: 'BillingDocumentDate',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    style: 'medium'
                                }
                            }"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="_IDGenColumn2"
                        width="15rem"
                    >
                        <Label
                            id="_IDGenLabel2"
                            text="Customer Name"
                        />
                        <t:template>
                            <Text
                                id="_IDGenText3"
                                text="{BusinessPartnerName1}"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="_IDGenColumn3"
                        width="10rem"
                    >
                        <Label
                            id="_IDGenLabel3"
                            text="Net Amount"
                        />
                        <t:template>
                            <Text
                                id="_IDGenText4"
                                text="{
                                path: 'TotalNetAmount',
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: {
                                    currencyCode: '{TransactionCurrency}'
                                }
                            }"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="_IDGenColumn4"
                        width="10rem"
                    >
                        <Label
                            id="_IDGenLabel4"
                            text="Due Date"
                        />
                        <t:template>
                            <Text
                                id="_IDGenText5"
                                text="{
                                path: 'NetDueDate',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    style: 'medium'
                                }
                            }"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="_IDGenColumn5"
                        width="10rem"
                    >
                        <Label
                            id="_IDGenLabel5"
                            text="Tax Code"
                        />
                        <t:template>
                            <Text
                                id="_IDGenText6"
                                text="{TaxCode}"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="_IDGenColumn6"
                        width="12rem"
                    >
                        <Label
                            id="_IDGenLabel6"
                            text="Product"
                        />
                        <t:template>
                            <Text
                                id="_IDGenText7"
                                text="{Product}"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="_IDGenColumn7"
                        width="10rem"
                    >
                        <Label
                            id="_IDGenLabel7"
                            text="eWay Bill No."
                        />
                        <t:template>
                            <Text
                                id="_IDGenText8"
                                text="{IN_EDocEInvcEWbillNmbr}"
                            />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </content>
    </Page>
</mvc:View>
