<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        id="rowDetailsDialog"
        title="Document Details"
        resizable="true"
        contentWidth="500px"
    >
        <VBox
            id="_IDGenVBox6"
            class="sapUiMediumMargin"
        >
            <form:SimpleForm
                id="_IDGenSimpleForm"
                layout="ResponsiveGridLayout"
                labelSpanL="4"
                labelSpanM="4"
                emptySpanL="1"
                emptySpanM="1"
                columnsL="1"
                columnsM="1"
            >
                <core:Title
                    id="_IDGenTitle2"
                    text="Document Information"
                />
                <Label
                    id="_IDGenLabel5"
                    text="Company Code"
                />
                <Text
                    id="_IDGenText10"
                    text="{mergedData>CompanyCode}"
                />
                <Label
                    id="_IDGenLabel14"
                    text="Document No."
                />
                <Text
                    id="_IDGenText11"
                    text="{mergedData>AccountingDocument}"
                />
                <Label
                    id="_IDGenLabel16"
                    text="Fiscal Year"
                />
                <Text
                    id="_IDGenText12"
                    text="{mergedData>FiscalYear}"
                />
                <Label
                    id="_IDGenLabel17"
                    text="Document Type"
                />
                <Text
                    id="_IDGenText13"
                    text="{mergedData>AccountingDocumentType_1} - {mergedData>AccountingDocumentTypeName_1}"
                />
                <Label
                    id="_IDGenLabel22"
                    text="Posting Date"
                />
                <Text
                    id="_IDGenText14"
                    text="{path: 'mergedData>PostingDate', formatter: '.formatDate'}"
                />
                <Label
                    id="_IDGenLabel23"
                    text="Document Date"
                />
                <Text
                    id="_IDGenText15"
                    text="{path: 'mergedData>DocumentDate', formatter: '.formatDate'}"
                />

                <core:Title
                    id="_IDGenTitle3"
                    text="Financial Data"
                />
                <Label
                    id="_IDGenLabel24"
                    text="Taxable Amount"
                />
                <ObjectNumber
                    id="_IDGenObjectNumber2"
                    number="{path: 'mergedData>TaxableAmount', formatter: '.formatNumber'}"
                    unit="{mergedData>TransactionCurrency}"
                />
                <Label
                    id="_IDGenLabel25"
                    text="Tax Amount"
                />
                <ObjectNumber
                    id="_IDGenObjectNumber4"
                    number="{path: 'mergedData>TotalTaxAmount', formatter: '.formatNumber'}"
                    unit="{mergedData>TransactionCurrency}"
                />
                <Label
                    id="_IDGenLabel26"
                    text="Grand Total"
                />
                <ObjectNumber
                    id="_IDGenObjectNumber5"
                    number="{path: 'mergedData>GrandTotal', formatter: '.formatNumber'}"
                    unit="{mergedData>TransactionCurrency}"
                />

                <core:Title
                    id="_IDGenTitle4"
                    text="Partner &amp; Location"
                />
                <Label
                    id="_IDGenLabel27"
                    text="Customer"
                />
                <Text
                    id="_IDGenText16"
                    text="{mergedData>Customer}"
                />
                <Label
                    id="_IDGenLabel28"
                    text="Customer Name"
                />
                <Text
                    id="_IDGenText17"
                    text="{mergedData>CustomerName}"
                />
                <Label
                    id="_IDGenLabel29"
                    text="GST Number"
                />
                <Text
                    id="_IDGenText18"
                    text="{mergedData>BPTaxNumber}"
                />
                <Label
                    id="_IDGenLabel30"
                    text="Business Place"
                />
                <Text
                    id="_IDGenText19"
                    text="{mergedData>BusinessPlace}"
                />
                <Label
                    id="_IDGenLabel31"
                    text="Place of Supply"
                />
                <Text
                    id="_IDGenText20"
                    text="{mergedData>IN_GSTPlaceOfSupply}"
                />
                <Label
                    id="_IDGenLabel32"
                    text="Region"
                />
                <Text
                    id="_IDGenText21"
                    text="{mergedData>Region}"
                />
            </form:SimpleForm>
        </VBox>
        <beginButton>
            <Button
                id="_IDGenButton4"
                text="Close"
                press=".onCloseDetailsDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
